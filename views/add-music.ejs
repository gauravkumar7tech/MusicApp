<!DOCTYPE html>
<html>
<head>
    <title>Add Music - Music Discovery Hub</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
        <!-- Main Content -->
        <div class="main-content">
            <header class="header">
                <div class="container">
                    <h1><i class="fas fa-music"></i> Music Discovery Hub</h1>
                    <nav class="nav">
                        <a href="/music/add" class="nav-link active"><i class="fas fa-plus"></i> Add Music</a>
                        <a href="/music/random" class="nav-link"><i class="fas fa-random"></i> Surprise Me</a>
                        <button id="theme-toggle" class="theme-toggle" title="Toggle theme">
                            <i class="fas fa-moon"></i>
                        </button>
                    </nav>
                </div>
            </header>

        <main class="main">
        <div class="container">
            <div class="form-container">
                <h2><i class="fas fa-plus-circle"></i> Add New Music</h2>
                
                <% if (typeof error !== 'undefined') { %>
                    <div class="error-message">
                        <i class="fas fa-exclamation-triangle"></i>
                        <%= error %>
                    </div>
                <% } %>

                <form method="POST" action="/music/add" class="music-form" enctype="multipart/form-data">
                    <div class="form-group">
                        <label><i class="fas fa-music"></i> Song Title</label>
                        <input type="text" name="title" placeholder="Enter song title" required>
                    </div>
                    
                    <div class="form-group">
                        <label><i class="fas fa-user"></i> Artist</label>
                        <input type="text" name="artist" placeholder="Enter artist name" required>
                    </div>
                    
                    <div class="form-group">
                        <label><i class="fas fa-album"></i> Album</label>
                        <input type="text" name="album" placeholder="Enter album name" required>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label><i class="fas fa-tag"></i> Genre</label>
                            <select name="genre" required>
                                <option value="">Select Genre</option>
                                <option value="Pop">Pop</option>
                                <option value="Rock">Rock</option>
                                <option value="Jazz">Jazz</option>
                                <option value="Classical">Classical</option>
                                <option value="Electronic">Electronic</option>
                                <option value="Hip Hop">Hip Hop</option>
                                <option value="Country">Country</option>
                                <option value="R&B">R&B</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label><i class="fas fa-calendar"></i> Year</label>
                            <input type="number" name="year" placeholder="2025" min="1900" max="2025" required>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label><i class="fas fa-clock"></i> Duration</label>
                            <input type="text" name="duration" placeholder="3:45" required>
                        </div>
                        
                        <div class="form-group">
                            <label><i class="fas fa-star"></i> Rating</label>
                            <input type="number" name="rating" placeholder="8" min="1" max="10" required>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label><i class="fas fa-comment"></i> Description</label>
                        <textarea name="description" placeholder="Tell us about this song..." required></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label><i class="fas fa-file-audio"></i> Audio File</label>
                        <input type="file" name="audioFile" accept=".mp3,.wav,.m4a" required>
                    </div>
                    
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-plus"></i> Add Music
                    </button>
                </form>
            </div>
            </main>
        </div>
    </div>

    <style>
        .form-group input[type="file"] {
            padding: 0.5rem;
            border: 2px dashed var(--border-color);
            border-radius: 10px;
            background: var(--bg-secondary);
            color: var(--text-primary);
            cursor: pointer;
        }
        
        .form-group input[type="file"]:hover {
            border-color: #667eea;
        }
        
        body {
            background: linear-gradient(135deg, #00b894 0%, #55efc4 100%);
        }
    </style>

    <script>
        // Theme toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('theme-toggle');
            const body = document.body;
            const icon = themeToggle.querySelector('i');

            // Check for saved theme preference or default to light mode
            const currentTheme = localStorage.getItem('theme') || 'light';
            body.setAttribute('data-theme', currentTheme);

            if (currentTheme === 'dark') {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            }

            themeToggle.addEventListener('click', function() {
                const currentTheme = body.getAttribute('data-theme');
                const newTheme = currentTheme === 'light' ? 'dark' : 'light';

                body.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);

                // Toggle icon
                if (newTheme === 'dark') {
                    icon.classList.remove('fa-moon');
                    icon.classList.add('fa-sun');
                } else {
                    icon.classList.remove('fa-sun');
                    icon.classList.add('fa-moon');
                }
            });
        });
    </script>
</body>
</html>
